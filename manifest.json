{
  "manifest_version": 2,
  "name": "Binancify",
  "version": "1.0",

  "description": "p2p orders monitoring and alerting with sbeep sound",
  "icons": {
    "30": "icons/Plant.png"
  },

  "browser_action": {
    "default_icon": "icons/Plant.png",
    "default_title": "Binancify"
  },
  "permissions": ["notifications"],

  "background": {
    "scripts": ["background-script.js"]
  },

  "content_scripts": [
        {
          "matches": ["*://*.p2p.binance.com/*"],
          "js": ["binancify.js"]
        }
      ]  
  }
  